import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class WordCount {
    public static void main(String[] args) throws FileNotFoundException {
        File file = CheckIO.findFile("hamlet.txt");
        Scanner input = new Scanner(file);
        processWords(input);
    }

    public static void processWords(Scanner text) {

        int characters = 0;
        int words = 0;
        int lines = 0;

        while (text.hasNextLine()) {
            String line = text.nextLine();
            Scanner lineScanner = new Scanner(line);
            while (lineScanner.hasNext()) {
                String word = lineScanner.next();
                characters += word.length();
                words++;

                if (word.contains("!") && !word.contains("?") && !word.contains(".")) {
                    lines++;
                    characters--;
                }
            }
        }
        System.out.println("Amount of characters: " + characters);
        System.out.println("Amount of words: " + words);
        System.out.println("Amount of lines: " + lines);

    }
}
